<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pedidos</title>
</head>
<body>

    <%- include("../partials/menu.ejs") %>
    
    <h1>Lista de pedidos</h1>

    <% orders.forEach( order => { %>
    
        <p>
            <%= order._id %><br>
            <%= order.amount %><br>
            <%= order.created_at %><br>
        </p>

        <a href="/admin/pedido/<%= order._id %>">Ver</a>

        <br>

    <% }) %>
    
</body>
</html>